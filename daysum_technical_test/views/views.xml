<odoo>
  <record id="view_hide_delete_action_form" model="ir.ui.view">
        <field name="name">invoice.template.daysum.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="js_class">daysum_invoice_form</attribute>
            </xpath>
            <xpath expr="//field[@name='price_total']" position="before">
                <field name="uom_category_name" invisible="1"/>
                <field name="parent_state" invisible="1"/>
            </xpath>
            <xpath expr="//sheet//notebook//tree//field[@name='price_total']" position="attributes">
                <attribute name="attrs">{'readonly': [('uom_category_name', 'not in', ['Weight', 'weight']),('parent_state', 'not in', ['posted'])]}</attribute>
            </xpath>

            <xpath expr="//sheet//notebook//tree//field[@name='price_unit']" position="attributes">
                <attribute name="attrs">{'readonly': [('uom_category_name', 'in', ['Weight', 'weight']),('parent_state', 'not in', ['posted'])]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_hide_delete_list" model="ir.ui.view">
        <field name="name">invoice.template.daysum.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">daysum_invoice_list</attribute>
            </xpath>
        </field>
    </record>

</odoo>